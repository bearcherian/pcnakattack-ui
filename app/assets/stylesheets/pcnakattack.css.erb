@CHARSET "US-ASCII";
body {
	background-color: #EEEEEE;
}
ul.items {
	padding: 10px;
}
ul.items li .item {
	border: 1px solid #CCCCCC;
	-moz-border-radius: 10px;
	-webkit-border-radius: 10px;
	border-radius: 10px;
	min-height: 228px;
}
li .item {
	position: relative;
	padding: 20px 10px 10px 10px;

}
li .item a.item_link {
	position: absolute;
	top: 0;
	left: 0;
	width: 100%;
	height: 100%;
}
li .item a.item_link img {
	padding-left: 2.5%;
}
li .item .media-item img{
	border-radius: 10px;
	min-width: 100%;
}

li .item .text {
	border-bottom-left-radius: 10px;
	border-bottom-right-radius: 10px
}

.item.tweets {
	background-color: #aac2cb;
	background: #FFFFFF url(<%= image_path 'twitter_bg.png' %>) no-repeat center;
}
.item.media {
	padding: 0px;
}
.item.media .text {
	position: absolute;
	bottom: 0;
	right: 0;
	background-color: rgba(0,0,0,0.5);
	padding-left: 5px;
	padding-right: 5px;
	overflow: hidden;
	max-height: 60%;
	width: 100%;
}
.item.media .text p {
	color: #FFFFFF;
	font-size: 90%;
}
.userinfo {
	display: inline-block;
	width: 100%;
}
.userinfo img.profile_picture {
	max-width: 40px;
	vertical-align: text-top;
	margin: 3px 3px 3px 8px;;
	border-radius: 5px;
	float:right;
}
.userinfo .username {
	float: right;
	text-align: right;
}
.userinfo .username .timeAgo {
    font-size: 70%;
    margin-top: -4%;
    display: block;
}
.item.media .userinfo .username {
	color: #FFFFFF;
}
.userinfo .screenname {
	font-size: 75%;
	display:block;
	margin-top: -5px;
	color: #999999;
}

.popupContent {
	width: 70%;
	background-color: #FFFFFF;
	margin: auto;
}

div#loading {
    text-align: center;
    padding-bottom: 75px;
}

